@import "../scss/mixins";

.left-nav-wrapper {
  position: fixed; left: 0; top: 0; width: 160px; height: 100%; background: rgba(0, 0, 0, .8); z-index: 10; box-shadow: 0 0 5px rgba(0, 0, 0, .8); @include transition(all .3s linear);
  &:hover { margin-left: 0; }
}
.left-nav {
  list-style: none; margin-top: 20px;
  li {
    display: block; @include transition(all .1s linear); font-size: 24px; line-height: .9; border-top: 1px solid #000;
    &:first-child { border: 0; }
    a {
      position: relative; display: block; padding: 10px 40px 10px 10px; text-decoration: none; text-align: right; color: #ffffff; @include transition(all .1s linear);
      .fa { position: absolute; right: 9px; top: 50%; margin-top: -0.5em; }
      .fa-sign-in { @include transform(rotate(180deg)); }
    }
    &:hover {
      background: #f0f5ff;
      a { color: #000; }
    }
  }
}
