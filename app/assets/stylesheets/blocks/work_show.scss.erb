.work-show {
    .ws-left {
        float: left; width: 300px; margin-right: 15px;
        .image {
            width: 300px; height: 400px; background: #333;
            .aci-img { max-height: 400px; max-width: 400px; box-shadow: 0 0 5px #000; }
        }
    }
    .ws-right {
        margin-left: 315px;
    }

}
.info-list {
    list-style: none;
    .il-item {
        margin-bottom: 10px; font-size: 130%;
        .name { display: inline-block; width: 235px; font-weight: bold; color: #333; }
        .value { display: inline-block; width: 400px; color: #000; }
        a { color: #333; }
    }
}