@import "../scss/mixins";

body { background: #f6f6f6; color: #444; font-size: 14px; line-height: 1; height: 100%; }

/* main structure */
.base-width { min-width: 720px; }
.page-body {
  height: 100%; margin-left: 40px;
  &.active { /*margin-left: 300px;*/ }
}
.page { padding: 20px 20px 40px; min-height: 100%; @include boxSizing('border-box'); }
.footer-wrapper { height: 40px; margin-top: -40px; position: relative; @include boxShadow(0 0 5px rgba(0, 0, 0, .3)); }
.footer { padding: 10px 0; }

/* links */
a {
	&:link,
	&:active,
	&:visited,
	&:hover { color: #444; }
}

h1 { margin-bottom: 15px; font-size: 200%; border-bottom: 2px solid #fff; }
h2 { margin-bottom: 15px; font-size: 150%; }

/* backgrounds */
.bg-dark { background: #3c3d41; }
.bg-main { background: #8da79a; }
.bg-light { background: #fdfdfd; color: #323232; }

/* center images */
.aci-wrap {
    display: table; table-layout: fixed;
    .aci-cell {
        display: table-cell; vertical-align: middle;
        .aci.img { display: block; margin: 0 auto; }
    }
}

/* animated objects */
.animated { @include transition(all .3s linear); }

/* two cols grid */
.container-2 {
  .grid-1 { float: left; width: 50%; @include boxSizing(border-box); padding-right: 10px; }
  .grid-2 { float: left; width: 50%; @include boxSizing(border-box); padding-left: 10px; }
}