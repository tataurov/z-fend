.form {
  margin-bottom: 15px;
  .fields {
    list-style: none; padding-top: 10px;
      .field { margin-bottom: 6px; }
    .label { float: left; width: 120px; }
    .input {
      margin-left: 120px;

      textarea,
      input[type="email"],
      input[type="password"],
      input[type="text"] { border: 0; border-radius: 5px; box-shadow: inset 0 0 3px rgba(0, 0, 0, .3); padding: 3px 10px; }
    }
  }
}