@import "../scss/mixins";

.form {
  font-size: 130%;
  margin-bottom: 15px;
  .fields {
    list-style: none; padding-top: 10px;
      .field { margin-bottom: 6px; }
    .label {
      width: 200px; display: inline-block; vertical-align: middle;
      label { vertical-align: middle; font-size: 21px; line-height: 0.8; }
    }
    .input {
      display: inline-block; vertical-align: middle;

      textarea,
      input[type="email"],
      input[type="password"],
      input[type="text"] {
        border: 1px solid #666; border-radius: 2px; padding: 3px 10px; font-size: 24px; @include transition(all .3s linear);
        &:focus { border: 1px solid #00d006; box-shadow: 0 0 2px #00d006, 0 0 4px #00d006; }
      }
    }
  }
}