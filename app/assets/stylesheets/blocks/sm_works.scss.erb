.works-list-sm {
    list-style: none; text-align: justify; padding: 20px 0;
    &:after { content: ''; display: inline-block; width: 100%; }
    a {
        color: #333;
        &:hover { color: #000; }
    }
    .wls-item {
         display: inline-block; width: 20%; padding: 5px; background: #fff; box-shadow: 0 0 5px rgba(0, 0, 0, .4); vertical-align: top; color: #333;
        .wls-img {
            height: 300px; overflow: hidden; position: relative;
            a {
                position: relative; display: block; height: 300px; overflow: hidden;
                &:after { height: 100%; width: 100%; box-shadow: inset 0 0 5px rgba(0, 0, 0, .3); position: absolute; top: 0; left: 0; z-index: 1; content: ''; }
            }
            img { width: 100%; }
        }
        .wls-top { padding: 5px 0; font-size: 150%; line-height: 1.4; }
        .wls-bottom { padding: 5px 0; font-size: 120%; line-height: 1.4; }
    }
}