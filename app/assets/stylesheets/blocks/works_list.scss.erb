@import "../scss/mixins";

.wl-header { font-size: 46px; font-weight: bold; text-shadow: 1px 1px 1px #000; color: #888; line-height: .7; margin-bottom: 10px; padding-bottom: 10px; border-bottom: 3px solid #888; }
.works-list {
  font-size: 130%;
  color: #333; list-style: none; font-weight: normal;
  a {
    color: #333;
    &:hover { color: #000; }
  }
  .wl-list-item {
    margin: 0 0 20px; text-align: left; float: left; width: 49%; background: #fff; border: 1px solid #c0e3d1; margin-right: 2%; @include boxSizing(border-box);
    &:nth-child(even) {
      margin-right: 0;

    }
    .wl-item {
      padding: 20px; height: 600px;

      .inn { height: 43px; margin-bottom: 10px; text-align: left;
        p { font-size: 32px; line-height: 16px; padding: 0; }
      }
      .img-link {
        overflow: hidden; display: block; height: 460px; text-align: center; position: relative;
        img {
          background: #000; border: 0; outline: 0; display: block; width: 100%;
          &.loading { position: absolute; left: 50%; top: 50%; width: 100px; margin-left: -50px; margin-top: -50px }
        }
      }
    }

  }
}