@import "../scss/mixins";

.works-list {
    color: #333; list-style: none; font-weight: normal; text-align: justify; -webkit-column-width: 20%; -webkit-column-width: 250px; width: 100%; padding-top: 15px;
    a {
        color: #333;
        &:hover { color: #000; }
    }
    li {
        display: inline-block; width: 230px; margin: 0 0 15px; padding: 10px; vertical-align: top; background: #fafafa; text-align: center; @include boxShadow(0 0 3px rgba(0, 0, 0, .5));
        .wl-item {
            .inn { border-bottom: 1px solid #e3e3e3; height: 43px; margin-bottom: 10px; text-align: left;
                p { font-size: 16px; line-height: 16px; padding: 0; }
            }
            .img-link {
                overflow: hidden; display: block; width: 225px;
                img { background: #000; width: 225px; border: 0; outline: 0; display: block; @include transition(all .2s linear); }
            }
        }
        &:hover {
            img { @include transform(scale(1.04)); }
        }
    }
}