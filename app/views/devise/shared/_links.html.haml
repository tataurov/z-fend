%ul.inline-links
  - if controller_name != 'sessions'
    %li.il-item
      = link_to "Войти", new_session_path(resource_name)
  - if devise_mapping.registerable? && controller_name != 'registrations' && user_signed_in?
    %li.il-item
      = link_to "Регистрация", new_registration_path(resource_name)
  - if devise_mapping.recoverable? && controller_name != 'passwords'
    %li.il-item
      = link_to "Забыли пароль?", new_password_path(resource_name)
  - if devise_mapping.confirmable? && controller_name != 'confirmations'
    %li.il-item
      = link_to "Не получили письмо с подтверждением?", new_confirmation_path(resource_name)
  - if devise_mapping.lockable? && resource_class.unlock_strategy_enabled?(:email) && controller_name != 'unlocks'
    %li.il-item
      = link_to "Не получили инструкций разблокировки?", new_unlock_path(resource_name)
- if devise_mapping.omniauthable?
  %ul.inline-links
    - resource_class.omniauth_providers.each do |provider|
      %li.il-item
        = link_to "Войти как #{provider.to_s.titleize}", omniauth_authorize_path(resource_name, provider)
